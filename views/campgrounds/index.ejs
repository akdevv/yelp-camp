<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<ul>
    <% for( let campground of campgrounds ) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length) { %>
                <img src="<%= campground.images[0].url %>" alt="campground image" class="img-fluid" />
                <% } else { %>
                <img src="https://res.cloudinary.com/da4hupi8g/image/upload/v1706594799/yelp-camp/default/e3mhbuqm5xii2kq4fzjg.jpg" alt="default campground image">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text"><small class="text-secondary"><%= campground.location %></small></p>
                    <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>